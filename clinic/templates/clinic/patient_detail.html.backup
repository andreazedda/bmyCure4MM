{% block extra_js %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const points = {{ chart_points_json|default:"[]"|safe }};
const therapySpans = {{ therapy_spans_json|default:"[]"|safe }};
if (points.length) {
    const rootStyle = getComputedStyle(document.documentElement);
    const cPrimary = rootStyle.getPropertyValue('--bs-primary').trim() || undefined;
    const cInfo = rootStyle.getPropertyValue('--bs-info').trim() || undefined;
    const cDanger = rootStyle.getPropertyValue('--bs-danger').trim() || undefined;
    const cSuccess = rootStyle.getPropertyValue('--bs-success').trim() || undefined;
    const cSecondary = rootStyle.getPropertyValue('--bs-secondary').trim() || undefined;

    const ctx = document.getElementById('trendChart').getContext('2d');
    const labels = points.map(p => p.date);
    const mProtein = points.map(p => p.m);
    const flc = points.map(p => p.flc);
    const therapyBandPlugin = {
        id: 'therapyBands',
        beforeDraw(chart, args, opts) {
            const spans = (opts && opts.spans) ? opts.spans : [];
            if (!spans.length) return;
            const {ctx, chartArea, scales} = chart;
            const x = scales.x;

            const toRgba = (color, alpha) => {
                if (!color) return `rgba(108,117,125,${alpha})`;
                const hex = color.startsWith('#') ? color.slice(1) : null;
                if (hex && (hex.length === 6 || hex.length === 3)) {
                    const full = hex.length === 3 ? hex.split('').map(c => c + c).join('') : hex;
                    const r = parseInt(full.slice(0, 2), 16);
                    const g = parseInt(full.slice(2, 4), 16);
                    const b = parseInt(full.slice(4, 6), 16);
                    return `rgba(${r},${g},${b},${alpha})`;
                }
                // fall back to neutral
                return `rgba(108,117,125,${alpha})`;
            };

            const findStartIdx = (dateStr) => {
                if (!dateStr) return 0;
                const idx = labels.findIndex(l => l >= dateStr);
                return idx === -1 ? 0 : idx;
            };

            const findEndIdx = (dateStr) => {
                const end = dateStr || labels[labels.length - 1];
                for (let i = labels.length - 1; i >= 0; i--) {
                    if (labels[i] <= end) return i;
                }
                return labels.length - 1;
            };

            ctx.save();
            ctx.fillStyle = toRgba(cSecondary, 0.08);
            for (const span of spans) {
                if (!span.start) continue;
                const startIdx = findStartIdx(span.start);
                const endIdx = findEndIdx(span.end);
                if (endIdx < startIdx) continue;
                const x1 = x.getPixelForValue(startIdx);
                const x2 = x.getPixelForValue(endIdx);
                const left = Math.min(x1, x2);
                const width = Math.abs(x2 - x1);
                ctx.fillRect(left, chartArea.top, width, chartArea.bottom - chartArea.top);
            }
            ctx.restore();
        }
    };

    new Chart(ctx, {
        type: 'line',
        data: {
            labels,
            datasets: [
                {
                    label: 'M-Protein (g/dL)',
                    data: mProtein,
                    spanGaps: true,
                    borderColor: cPrimary,
                    tension: 0.3,
                    fill: false
                },
                {
                    label: 'FLC Ratio',
                    data: flc,
                    spanGaps: true,
                    borderColor: cInfo,
                    tension: 0.3,
                    fill: false
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { title: { display: true, text: 'Date' } },
                y: { title: { display: true, text: 'Value' } }
            },
            plugins: {
                therapyBands: {
                    spans: therapySpans,
                }
            }
        },
        plugins: [therapyBandPlugin],
    });

    const twinCtx = document.getElementById('twinChart').getContext('2d');
    const ldh = points.map(p => p.ldh);
    const beta2m = points.map(p => p.beta2m);
    const riss = points.map(p => p.riss);
    new Chart(twinCtx, {
        type: 'line',
        data: {
            labels,
            datasets: [
                {
                    label: 'LDH (U/L)',
                    data: ldh,
                    spanGaps: true,
                    borderColor: cDanger,
                    tension: 0.3,
                    fill: false,
                    yAxisID: 'y'
                },
                {
                    label: 'Œ≤2M (mg/L)',
                    data: beta2m,
                    spanGaps: true,
                    borderColor: cSuccess,
                    tension: 0.3,
                    fill: false,
                    yAxisID: 'y1'
                },
                {
                    label: 'R-ISS (1‚Äì3)',
                    data: riss,
                    spanGaps: true,
                    borderColor: cSecondary,
                    tension: 0.0,
                    stepped: true,
                    fill: false,
                    yAxisID: 'y2'
                },
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: { title: { display: true, text: 'Date' } },
                y: { position: 'left', title: { display: true, text: 'LDH' } },
                y1: { position: 'right', grid: { drawOnChartArea: false }, title: { display: true, text: 'Œ≤2M' } },
                y2: { position: 'right', grid: { drawOnChartArea: false }, min: 0, max: 3.5, ticks: { stepSize: 1 }, title: { display: true, text: 'R-ISS' } },
            },
            plugins: {
                therapyBands: {
                    spans: therapySpans,
                }
            }
        },
        plugins: [therapyBandPlugin],
    });
}

document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('addTherapy');
    if (!container) return;

    const form = container.querySelector('form');
    if (!form) return;

    const regimenSelect = form.querySelector('select[name="regimen"]');
    const startInput = form.querySelector('input[name="start_date"]');
    const endInput = form.querySelector('input[name="end_date"]');
    const outcomeInput = form.querySelector('input[name="outcome"]');
    const adverseTextarea = form.querySelector('textarea[name="adverse_events"]');
    const msg = document.getElementById('therapyPresetMsg');

    const latestAssessmentDate = (container.dataset.latestAssessmentDate || '').trim();

    const setMsg = (text) => {
        if (!msg) return;
        msg.textContent = text || '';
    };

    const todayIso = () => {
        const d = new Date();
        const yyyy = d.getFullYear();
        const mm = String(d.getMonth() + 1).padStart(2, '0');
        const dd = String(d.getDate()).padStart(2, '0');
        return `${yyyy}-${mm}-${dd}`;
    };

    const findRegimenOption = (name) => {
        if (!regimenSelect) return null;
        const wanted = (name || '').toLowerCase().trim();
        if (!wanted) return null;
        const options = Array.from(regimenSelect.options || []);
        const exact = options.find(o => (o.textContent || '').trim().toLowerCase() === wanted);
        if (exact) return exact;
        const contains = options
            .filter(o => (o.textContent || '').trim().toLowerCase().includes(wanted))
            .sort((a, b) => (a.textContent || '').length - (b.textContent || '').length);
        return contains[0] || null;
    };

    const setRegimenByName = (name) => {
        const opt = findRegimenOption(name);
        if (!opt) {
            setMsg(`Preset "${name}" not found in Regimens.`);
            return;
        }
        regimenSelect.value = opt.value;
        regimenSelect.dispatchEvent(new Event('change', { bubbles: true }));
        setMsg('');
    };

    const appendAdverseEvent = (text) => {
        if (!adverseTextarea) return;
        const t = (text || '').trim();
        if (!t) return;
        const current = (adverseTextarea.value || '').trim();
        if (!current) {
            adverseTextarea.value = t;
            return;
        }
        if (current.toLowerCase().includes(t.toLowerCase())) return;
        adverseTextarea.value = `${current}; ${t}`;
    };

    document.querySelectorAll('[data-therapy-preset-regimen]').forEach(btn => {
        btn.addEventListener('click', () => setRegimenByName(btn.dataset.therapyPresetRegimen));
    });

    document.querySelectorAll('[data-therapy-preset-start]').forEach(btn => {
        btn.addEventListener('click', () => {
            if (!startInput) return;
            const mode = btn.dataset.therapyPresetStart;
            if (mode === 'today') startInput.value = todayIso();
            if (mode === 'latest_assessment') {
                if (!latestAssessmentDate) {
                    setMsg('No assessments found: cannot set start date from latest assessment.');
                    return;
                }
                startInput.value = latestAssessmentDate;
                setMsg('');
            }
        });
    });

    document.querySelectorAll('[data-therapy-preset-end]').forEach(btn => {
        btn.addEventListener('click', () => {
            if (!endInput) return;
            const mode = btn.dataset.therapyPresetEnd;
            if (mode === 'clear') endInput.value = '';
        });
    });

    document.querySelectorAll('[data-therapy-preset-outcome]').forEach(btn => {
        btn.addEventListener('click', () => {
            if (!outcomeInput) return;
            outcomeInput.value = btn.dataset.therapyPresetOutcome || '';
        });
    });

    document.querySelectorAll('[data-therapy-preset-ae]').forEach(btn => {
        btn.addEventListener('click', () => appendAdverseEvent(btn.dataset.therapyPresetAe));
    });
});
</script>
{% endblock %}
