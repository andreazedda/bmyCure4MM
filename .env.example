# Environment Variables Configuration Template

# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===================================================================
# Django Configuration
# ===================================================================

# REQUIRED: Django secret key for cryptographic signing
# This MUST be set to a strong, random value. The application will not start without it.
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# Example (DO NOT USE THIS): django-insecure-abc123xyz789!@#$%^&*()_+-=
# DJANGO_SECRET_KEY=<paste-your-generated-key-here>

# Debug mode (1 = True, 0 = False)
# IMPORTANT: Set to 0 in production!
DJANGO_DEBUG=1

# Allowed hosts (comma-separated list)
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (comma-separated list, for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# ===================================================================
# Database Configuration (Optional - defaults to SQLite)
# ===================================================================

# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# For MySQL:
# DATABASE_URL=mysql://user:password@localhost:3306/dbname

# ===================================================================
# Celery / Redis Configuration
# ===================================================================

# Redis connection URL for Celery message broker
# Default: redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Redis connection for Celery result backend
# Default: same as CELERY_BROKER_URL
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Run Celery tasks synchronously (development only)
# Set to 1 to run without Redis/Celery worker
# CELERY_TASK_ALWAYS_EAGER=0

# ===================================================================
# Feature Flags
# ===================================================================

# Enable experimental PREDLAB v2 features (0 or 1)
PREDLAB_V2=0

# ===================================================================
# Email Configuration (Optional, for production)
# ===================================================================

# Email backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP settings
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# Default from email
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===================================================================
# Logging Configuration (Optional)
# ===================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# ===================================================================
# Security Settings (Production)
# ===================================================================

# Force HTTPS (set to 1 in production with SSL)
# SECURE_SSL_REDIRECT=0

# HSTS settings (uncomment for production with HTTPS)
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=1
# SECURE_HSTS_PRELOAD=1

# Session cookie security
# SESSION_COOKIE_SECURE=1
# CSRF_COOKIE_SECURE=1

# ===================================================================
# Static Files (Production)
# ===================================================================

# URL for serving static files (if using CDN)
# STATIC_URL=/static/

# Root directory for collected static files
# STATIC_ROOT=/path/to/staticfiles

# ===================================================================
# Media Files
# ===================================================================

# URL for serving media files
# MEDIA_URL=/media/

# Root directory for user uploads
# MEDIA_ROOT=/path/to/media

# ===================================================================
# Third-Party Services (Optional)
# ===================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Google Analytics / Analytics service
# ANALYTICS_ID=UA-XXXXXXXXX-X

# ===================================================================
# Notes
# ===================================================================

# 1. Keep .env file secure and never commit to version control
# 2. In production, use strong passwords and keys
# 3. Enable HTTPS and set security flags
# 4. Use managed services for database and Redis when possible
# 5. Regularly rotate secrets and credentials
# 6. Use environment-specific .env files (.env.production, .env.staging)
